.divider {
		height: 2rpx;
		background-color: rgb(242, 242, 242);
		margin-top: 15rpx;
		margin-bottom: 15rpx;
}
.avatar {
		width: 160rpx;
		/* 宽度与高度需相同 */
		height: 160rpx;
		/* 高度与宽度需相同 */
		border-radius: 50%;
		/* 关键属性 */
		overflow: hidden;
		/* 确保内容被裁剪为圆形 */
}
image {
		width: 160rpx;
		/* 宽度与高度需相同 */
		height: 160rpx;
		/* 高度与宽度需相同 */
